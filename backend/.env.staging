# Staging Environment Configuration

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chat-website-staging?retryWrites=true&w=majority
REDIS_URL=redis://redis-staging:6379

# JWT Configuration
JWT_SECRET=your-staging-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=staging

# CORS Configuration
FRONTEND_URL=https://staging.your-domain.com

# SSL/HTTPS Configuration
SSL_CERT_PATH=/etc/ssl/certs/staging.your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/staging.your-domain.key

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=/var/log/chat-website/staging.log

# Rate Limiting (Relaxed for testing)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
AUTH_RATE_LIMIT_MAX=10
MESSAGE_RATE_LIMIT_MAX=60

# Security Configuration
BCRYPT_SALT_ROUNDS=10
SESSION_TIMEOUT=7200000

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=60000
METRICS_ENABLED=true
METRICS_PORT=9090

# Email Configuration (for testing)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-pass
FROM_EMAIL=staging@your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/uploads/chat-website-staging

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=25000
WS_HEARTBEAT_TIMEOUT=60000